@model Health_Care_MIS.Models.Medication

@{
    ViewBag.Title = "Add Medication";
}

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">
            <i class="fas fa-plus-circle me-2"></i>
            Add New Medication
        </h2>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-container">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">
                                    <i class="fas fa-prescription-bottle me-2"></i>
                                    Medication Name
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter medication name" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">
                                    <i class="fas fa-tag me-2"></i>
                                    Type
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter medication type" } })
                                    @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign me-2"></i>
                                    Price
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01", min = "0", placeholder = "0.00" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Create Medication
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Styles {
    <style>
        .form-container {
            max-width: 100%;
            margin: 0 auto;
        }
        
        .form-group label {
            font-weight: 500;
        }
        
        .content-section {
            animation: fadeIn 0.3s ease-out;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }
        
        .input-group .form-control {
            border-left: none;
        }
        
        .input-group .form-control:focus {
            border-left: none;
            box-shadow: none;
        }
    </style>
}
