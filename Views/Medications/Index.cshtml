@model IEnumerable<Health_Care_MIS.Models.Medication>

@{
    ViewBag.Title = "Medications";
}

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">
            <i class="fas fa-pills me-2"></i>
            Medications
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Add New Medication
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-prescription-bottle me-2"></i>
                                Name
                            </th>
                            <th>
                                <i class="fas fa-tag me-2"></i>
                                Type
                            </th>
                            <th>
                                <i class="fas fa-dollar-sign me-2"></i>
                                Price
                            </th>
                            <th class="text-end">
                                <i class="fas fa-cog me-2"></i>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="ms-2">@item.name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.type</span>
                                </td>
                                <td>
                                    <span class="text-success fw-bold">$@item.price</span>
                                </td>
                                <td>
                                    <div class="btn-group float-end">
                                        <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-group .btn {
            padding: 0.25rem 0.5rem;
            margin: 0 2px;
        }
        
        .table th {
            white-space: nowrap;
        }
        
        .content-section {
            animation: fadeIn 0.3s ease-out;
        }
        
        .badge {
            font-size: 0.85rem;
            padding: 0.35rem 0.65rem;
        }
    </style>
}
