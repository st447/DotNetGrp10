@model Health_Care_MIS.Models.Staff

@{
    ViewBag.Title = "Delete Staff Member";
}

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger mb-0">
            <i class="fas fa-user-times me-2"></i>
            Delete Staff Member
        </h2>
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to delete this staff member? This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Full Name</h6>
                    <p class="mb-0">@(Model.Firstname + " " + Model.LastName)</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Specialization</h6>
                    <p class="mb-0">@Model.Specialisation</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Contact Info</h6>
                    <p class="mb-0">@Model.ContactInfo</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Department</h6>
                    <p class="mb-0">@Model.Department</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Role</h6>
                    <p class="mb-0">@Model.Role</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted mb-1">Email</h6>
                    <p class="mb-0">@(Model.SignUp1 != null ? Model.SignUp1.email : "No email assigned")</p>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Staff Member
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .content-section {
            padding: 20px;
        }
        h6 {
            font-size: 0.875rem;
        }
        p {
            font-size: 1rem;
        }
    </style>
}
