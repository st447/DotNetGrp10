@model Health_Care_MIS.Models.laboratoryResult

@{
    ViewBag.Title = "Delete Laboratory Result";
}

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>Delete Laboratory Result
            </h2>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <div class="alert alert-danger mb-4">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this laboratory result? This action cannot be undone.
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-flask me-2"></i>Test Type
                                </label>
                                <p class="mb-3 fs-5">@(Model.laboratory?.testType ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Patient
                                </label>
                                <p class="mb-3 fs-5">@(Model.laboratory?.Registration != null ? $"{Model.laboratory.Registration.Firstname} {Model.laboratory.Registration.Lastname}" : "N/A")</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Result Date
                                </label>
                                <p class="mb-3 fs-5">@(Model.date?.ToString("MMM dd, yyyy") ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-file-medical-alt me-2"></i>Results
                                </label>
                                <p class="mb-3 fs-5">@(Model.Results ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-comment me-2"></i>Notes
                                </label>
                                <p class="mb-3 fs-5">@(Model.Notes ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <hr class="border-danger" />
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title text-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>Important Notice
                    </h5>
                    <p class="card-text">
                        Deleting this laboratory result will permanently remove it from the system. This action cannot be reversed.
                        Please make sure you want to proceed with the deletion.
                    </p>
                    <hr />
                    <div class="text-muted">
                        <small>
                            <i class="fas fa-clock me-2"></i>Created: @(Model.date?.ToString("MMM dd, yyyy") ?? "N/A")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
