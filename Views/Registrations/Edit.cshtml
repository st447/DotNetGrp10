@model Health_Care_MIS.Models.Registration

@{
    ViewBag.Title = "Edit Patient";
}

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fas fa-user-edit text-primary me-2"></i>Edit Patient Information
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                        @Html.HiddenFor(model => model.PatientID)

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-user text-primary me-2"></i>First Name
                                </label>
                                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter first name" } })
                                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-user text-primary me-2"></i>Last Name
                                </label>
                                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter last name" } })
                                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-calendar text-info me-2"></i>Date of Birth
                                </label>
                                @Html.EditorFor(model => model.Date_of_birth, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(model => model.Date_of_birth, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-venus-mars text-success me-2"></i>Gender
                                </label>
                                @Html.DropDownListFor(model => model.Gender, new SelectList(new[] { "Male", "Female", "Other" }), "-- Select Gender --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-phone text-primary me-2"></i>Contact Info
                                </label>
                                @Html.EditorFor(model => model.ContactInfo, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter contact number" } })
                                @Html.ValidationMessageFor(model => model.ContactInfo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-map-marker-alt text-danger me-2"></i>Address
                                </label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter address" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-tint text-danger me-2"></i>Blood Type
                                </label>
                                @Html.DropDownListFor(model => model.BloodType, new SelectList(new[] { "A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-" }), "-- Select Blood Type --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.BloodType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-shield-alt text-warning me-2"></i>Insurance Info
                                </label>
                                @Html.EditorFor(model => model.InsuranceInfo, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter insurance details" } })
                                @Html.ValidationMessageFor(model => model.InsuranceInfo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-ambulance text-danger me-2"></i>Emergency Contact
                                </label>
                                @Html.EditorFor(model => model.EmergencyContact, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter emergency contact" } })
                                @Html.ValidationMessageFor(model => model.EmergencyContact, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.email, "Email", new { @class = "form-label" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                @Html.DropDownList("Email", null, "Select email", new { @class = "form-select" })
                            </div>
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-12">
                            <hr class="my-4" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-save text-white me-2"></i>Save Changes
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-times text-white me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-primary me-2"></i>Update Guidelines
                    </h5>
                    <p class="card-text">Please ensure all information is accurate:</p>
                    <ul class="text-muted mb-0">
                        <li><i class="fas fa-check text-success me-2"></i>Verify personal information</li>
                        <li><i class="fas fa-check text-success me-2"></i>Update contact details if changed</li>
                        <li><i class="fas fa-check text-success me-2"></i>Confirm blood type accuracy</li>
                        <li><i class="fas fa-check text-success me-2"></i>Review insurance information</li>
                        <li><i class="fas fa-check text-success me-2"></i>Check emergency contact details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Initialize select2 for better dropdown experience
            if ($.fn.select2) {
                $('.form-select').select2({
                    theme: 'bootstrap-5'
                });
            }
        });
    </script>
}
