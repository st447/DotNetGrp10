@model Health_Care_MIS.Models.laboratory

@{
    ViewBag.Title = "Laboratory Test Details";
}

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fas fa-flask me-2"></i>Laboratory Test Details
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Patient Name
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.Registration.Lastname)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-user-md me-2"></i>Staff Member
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.Staff1.Firstname)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-vial me-2"></i>Test Type
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.testType)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Order Date
                                </label>
                                <p class="h5">@(Model.orderDate?.ToString("MMMM dd, yyyy") ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-2">
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <a href="@Url.Action("Edit", new { id = Model.testId })" class="btn btn-primary">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle me-2"></i>Information
                    </h5>
                    <p class="card-text">This page shows the complete details of the laboratory test.</p>
                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb me-2"></i>
                        You can edit this test's information by clicking the Edit button.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-group {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        height: 100%;
    }
</style>
