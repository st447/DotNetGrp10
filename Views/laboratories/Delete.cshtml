@model Health_Care_MIS.Models.laboratory

@{
    ViewBag.Title = "Delete Laboratory Test";
}

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>Delete Laboratory Test
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Are you sure you want to delete this laboratory test? This action cannot be undone.
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Patient Name
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.Registration.Lastname)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-user-md me-2"></i>Staff Member
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.Staff1.Firstname)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-vial me-2"></i>Test Type
                                </label>
                                <p class="h5">@Html.DisplayFor(model => model.testType)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Order Date
                                </label>
                                <p class="h5">@(Model.orderDate?.ToString("MMMM dd, yyyy") ?? "N/A")</p>
                            </div>
                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-12 mt-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i>Delete Test
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title text-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>Important Notice
                    </h5>
                    <p class="card-text">Before deleting this laboratory test, please note:</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>This action is permanent</li>
                        <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>All test data will be lost</li>
                        <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Related records may be affected</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-group {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        height: 100%;
    }
</style>
